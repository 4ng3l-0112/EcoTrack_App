<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ecotrack_app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EcoTrack">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Add these for other activities -->
        <activity android:name="com.example.ecotrack_app.LogWasteActivity" />
        <activity android:name="com.example.ecotrack_app.TipsResourcesActivity" />
        <activity android:name="com.example.ecotrack_app.CommunityChallengesActivity" />
        <activity android:name="com.example.ecotrack_app.GoalsActivity" />

    </application>
</manifest>