<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_color">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back"
        android:padding="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Goals"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/progressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="150/300"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/setGoalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Goal"
        android:layout_gravity="end"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal"
        android:weightSum="7"
        android:baselineAligned="false">

        <!-- Monday -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11"
                android:textColor="@android:color/white"
                android:layout_gravity="center"/>

            <ProgressBar
                android:id="@+id/mondayProgress"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:progress="40"
                android:progressDrawable="@drawable/vertical_progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:rotation="180"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M"
                android:textColor="@android:color/white"
                android:layout_gravity="center"/>
        </LinearLayout>

        <!-- Tuesday -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13"
                android:textColor="@android:color/white"
                android:layout_gravity="center"/>

            <ProgressBar
                android:id="@+id/tuesdayProgress"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:progress="60"
                android:progressDrawable="@drawable/vertical_progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:rotation="180"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T"
                android:textColor="@android:color/white"
                android:layout_gravity="center"/>
        </LinearLayout>

        <!-- Wednesday -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:textColor="@android:color/white"
                android:layout_gravity="center"/>

            <ProgressBar
                android:id="@+id/wednesdayProgress"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:progress="80"
                android:progressDrawable="@drawable/vertical_progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:rotation="180"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="W"
                android:textColor="@android:color/white"
                android:layout_gravity="center"/>
        </LinearLayout>

        <!-- Thursday -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@android:color/white"
                android:layout_gravity="center"/>

            <ProgressBar
                android:id="@+id/thursdayProgress"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:progress="30"
                android:progressDrawable="@drawable/vertical_progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:rotation="180"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Th"
                android:textColor="@android:color/white"
                android:layout_gravity="center"/>
        </LinearLayout>

        <!-- Friday -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textColor="@android:color/white"
                android:layout_gravity="center"/>

            <ProgressBar
                android:id="@+id/fridayProgress"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:progress="50"
                android:progressDrawable="@drawable/vertical_progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:rotation="180"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F"
                android:textColor="@android:color/white"
                android:layout_gravity="center"/>
        </LinearLayout>

        <!-- Saturday -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14"
                android:textColor="@android:color/white"
                android:layout_gravity="center"/>

            <ProgressBar
                android:id="@+id/saturdayProgress"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:progress="70"
                android:progressDrawable="@drawable/vertical_progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:rotation="180"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sat"
                android:textColor="@android:color/white"
                android:layout_gravity="center"/>
        </LinearLayout>

        <!-- Sunday -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:textColor="@android:color/white"
                android:layout_gravity="center"/>

            <ProgressBar
                android:id="@+id/sundayProgress"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:progress="90"
                android:progressDrawable="@drawable/vertical_progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:rotation="180"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sun"
                android:textColor="@android:color/white"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
